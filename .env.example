# EventHub Docker Environment Configuration
# Copy this file to .env and modify values as needed

# Application Configuration
SPRING_PROFILES_ACTIVE=docker

# Database Configuration (Development - External Access)
DB_URL=jdbc:mysql://localhost:3307/eventhub
DB_USERNAME=root
DB_PASSWORD=root123
DB_DRIVER_CLASS=com.mysql.cj.jdbc.Driver

# Additional Database Options
DB_SSL_ENABLED=false
DB_TIMEZONE=Australia/Melbourne

# Docker Environment Variables
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=eventhub
MYSQL_USER=eventhub_user
MYSQL_PASSWORD=password123

# Docker Database Connection URLs (for containers)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/eventhub?allowPublicKeyRetrieval=true&useSSL=false&serverTimezone=Australia/Melbourne
SPRING_DATASOURCE_USERNAME=eventhub_user
SPRING_DATASOURCE_PASSWORD=password123

# Flyway Configuration
SPRING_FLYWAY_URL=jdbc:mysql://mysql:3306/eventhub?allowPublicKeyRetrieval=true&useSSL=false&serverTimezone=Australia/Melbourne
SPRING_FLYWAY_USER=eventhub_user
SPRING_FLYWAY_PASSWORD=password123

# Port Configuration
WEB_PORT=8080
MYSQL_PORT=3307

# Optional: Mail Configuration (if using email features)
# SPRING_MAIL_HOST=smtp.gmail.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_USERNAME=your-email@gmail.com
# SPRING_MAIL_PASSWORD=your-app-password

# Optional: Logging Configuration
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_AU_EDU_RMIT_SEPT_WEBAPP=DEBUG
